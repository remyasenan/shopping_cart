<div class="page-header">
  <div class="span10">
    <h1>Checked out Products</h1>
  </div>
<table class="table table-striped table-bordered table-condensed">
<thead>
  <tr>
    <th colspan="1">Product Code</th>
    <th colspan="1">Product </th>
    <th colspan="1">Price</th>
  </tr>
</thead>
<tbody
  <% unless @display.empty? %>
    <% @display.each do |product| %>
    <% product = product.split(":") if product %>
    <tr>
      <td><%= product[0] %></td>
      <td><%= product[1] %></td>
      <td><%= product[2] %></td>
    <% end %>
    <tr>
    <% else %>
      <td>Move along nothing to see here<td>
    <% end %>
    </tr>
        <tr rowspan="2">
        <th colspan="2">Discounted Total</th>
        <th colspan="1"><%= @discounted_total %></th>
        </tr>
</tbody>                                        
</table>
<br /> 
</div>
